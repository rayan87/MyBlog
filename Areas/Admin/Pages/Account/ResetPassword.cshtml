@page
@model MyBlog.Admin.Pages.Account.ResetPasswordModel
@{
    Layout = "_EmptyLayout";
    ViewData["Title"] = "Account Recovery";
    ViewData["BackgroundImage"] = "/admin/dist/img/bg/photo-of-woodpile.jpg";
}


<p class="login-box-msg">Reset Password</p>
@if (Model.ShowForm)
{
    <div asp-validation-summary="All" class="text-danger"></div>
    <form method="post">
        <div class="input-group mb-3">
            <input asp-for="Password" class="form-control">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                </div>
            </div>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="input-group mb-3">
            <input asp-for="ConfirmPassword" class="form-control">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                </div>
            </div>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Reset password</button>
    </form>
}
else if (Model.Succeeded)
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle text-success"></i> 
        Password has been reset successfully.
    </div>
}
else
{
    <div class="alert alert-default-danger">
        <i class="fas fa-times-circle text-danger"></i> 
        An error occured while trying to process password reset request.
    </div>
}

<p class="mt-3"><a asp-page="Login"><i class="fas fa-angle-left"></i> Back to login</a></p>
    