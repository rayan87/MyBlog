@page
@model MyBlog.Admin.Pages.Account.ResendRegistrationCodeModel
@{
    Layout = "_EmptyLayout";
    ViewData["Title"] = "Resned Registration Code";
    ViewData["BackgroundImage"] = "/admin/dist/img/bg/asphalt-road-between-trees.jpg";
}

<p class="login-box-msg">Didn't get verification email?</p>
<p class="login-box-msg">Enter your email below to receive registration confirmation email.</p>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group mb-3">
        <input asp-for="Email" class="form-control">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-envelope"></span>
            </div>
        </div>
        <span asp-validation-for="Email"></span>
    </div>
</form>
