@model AuthorViewModel
<form method="post" enctype="multipart/form-data">    
@Html.HiddenFor(x => x.Id)
<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="row mb-2">
            <div class="col-md-6">
                <a asp-page="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-angle-left"></i>
                    Back to Authors
                </a>
            </div>
            <div class="col-md-6 text-right"></div>
        </div>
        <div asp-validation-summary="All">
             
        </div>
<div class="card bg-light">
    <div class="card-header">
        <h3 class="card-title">Personal Info</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4 text-center">
                <img src="/@(!string.IsNullOrEmpty(Model?.PhotoUrl) ? Model.PhotoUrl : "admin/dist/img/user1-128x128.jpg")" alt="Author Photo" class="img-circle img-fluid">
                <label>Upload a photo</label>
                <input asp-for="PhotoFile" class="form-control" accept="image/*" required="@(Model == null)">
                @if (Model == null)
                {
                    <span asp-validation-for="PhotoFile" class="text-danger"></span>
                }
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="JobTitle"></label>
                    <input asp-for="JobTitle" class="form-control">
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card bg-light">
    <div class="card-header">
        <h3 class="card-title">Account Info</h3>
    </div>
    <div class="card-body">
        <div class="form-group">
            <label asp-for="Email"></label>
            <div class="input-group">
                <input asp-for="Email" class="form-control">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <i class="fas fa-envelope"></i>
                    </div>
                </div>
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        @if (!Model.Id.HasValue)
        {
            <div class="form-group">
                <label asp-for="Password"></label>
                <div class="input-group">
                    <input asp-for="Password" class="form-control">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <i class="fas fa-lock"></i>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <div class="input-group">
                    <input asp-for="ConfirmPassword" class="form-control">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <i class="fas fa-lock"></i>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        } 
        else 
        {
            <div class="form-group">
                <label asp-for="Password"></label>
                <a data-toggle="modal" href="#change-password-modal">Change Password</a>
            </div>
        }
        <div class="form-group">
            <label asp-for="Permalink"></label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">http://localhost:5000/authors/</span>
                </div>
                <input asp-for="Permalink" class="form-control">
                <span asp-validation-for="Permalink"></span>
            </div>
            <span class="text-muted form-text">Permalink should be characters and numbers only.</span>
        </div>
    </div>
</div>
<div class="card bg-light">
    <div class="card-header">
        <h3 class="card-title">More Details</h3>
    </div>
    <div class="card-body">
        <div class="form-group">
            <label asp-for="ShortBio">Short Bio</label>
            <textarea asp-for="ShortBio" rows="2" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="FullBio">Full Bio</label>
            <textarea asp-for="FullBio" rows="5" class="form-control"></textarea>
        </div>
    </div>
    <div class="card-footer text-center">
        <button class="btn btn-primary">
            <i class="fas fa-save"></i>
            Save
        </button>
    </div>
</div>
</div>
</div> 

</form>