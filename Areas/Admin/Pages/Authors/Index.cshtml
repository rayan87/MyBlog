@page
@model MyBlog.Admin.Pages.Authors.IndexModel
@{
    ViewData["Title"] = "Authors";
}
<div class="row mb-2">
    <div class="col-md-6"></div>
    <div class="col-md-6 text-right">
        <a asp-page="New" class="btn btn-primary btn-sm">
            <i class="fa fa-plus"></i>
            New
        </a>
    </div>
</div>
<div class="row d-flex align-items-stretch">
    @if (Model.Authors.Count > 0)
    {
        foreach (var author in Model.Authors)
        {
            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                <div class="card bg-light">
                <div class="card-header text-muted border-bottom-0">
                    @author.JobTitle
                </div>
                <div class="card-body pt-0">
                    <div class="row">
                        <div class="col-7">
                            <h2 class="lead"><b>@author.FirstName @author.LastName</b></h2>
                            <p class="text-muted text-sm"><b>About: </b> @author.ShortBio </p>
                            <p><b>Posts: </b> <a href="#">@author.Posts.Count Posts</a></p>
                        </div>
                        <div class="col-5 text-center">
                            <img src="/admin/dist/img/user1-128x128.jpg" alt="" class="img-circle img-fluid">
                        </div>
                    </div>
                </div>
                <div class="card-footer text-right">
                    <a asp-page="Edit" asp-route-id="@author.Id" class="btn btn-sm btn-primary">
                        <i class="fas fa-edit"></i>
                        Edit
                    </a>
                    <a href="#" class="btn btn-sm btn-success">
                        <i class="fas fa-user"></i> View Profile
                    </a>
                </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="col-md-12">
                <p>No data available.</p>
            </div>
        </div>
    }
</div>
