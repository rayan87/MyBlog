@page
@model MyBlog.Admin.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Categories";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="row mb-2">
            <div class="col-md-6"></div>
            <div class="col-md-6 text-right">
                <a asp-page="New" class="btn btn-primary btn-sm">
                    <i class="fa fa-plus"></i>
                    New
                </a>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">List</h3>
            </div>
            <div class="card-body">
            @if (Model.Categories.Count > 0)
            {
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Posts</th>
                            <th style="width:143px;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var cat in Model.Categories)
                    {
                        <tr id="record-@cat.Id">
                            <td>@cat.Name</td>
                            <td><a href="#">(@cat.Posts) Posts</a></td>
                            <td>
                                <a asp-page="Edit" asp-route-id="@cat.Id" class="btn btn-primary btn-sm"><i class="fas fa fa-edit"></i> Edit</a>
                                <button type="button" 
                                    class="btn btn-danger btn-sm btn-delete"
                                    data-name="@cat.Name"
                                    data-id="@cat.Id"><i class="fas fa fa-trash"></i></button>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
                @Html.AntiForgeryToken()
            }
            else
            {
                <p>No data available</p>
            }
            </div>
        </div>
        
    </div>
</div>

@section Scripts
{
    <script>
        $('.btn-delete').on('click', function () {
            let id = $(this).data('id');
            let name = $(this).data('name');

            if (!confirm(`Are you sure you want to delete ${name}`))
                return;
            
            deleteItem(id);
        });

        function deleteItem(id) {
            let antiForgeryToken = $('input[name=__RequestVerificationToken]').val();

            $.ajax({
                url: '@Url.Page("Index")',
                method: 'DELETE',
                data: `id=${id}&__RequestVerificationToken=${antiForgeryToken}`,
                success: function (response) {
                    if (response == "1") {
                        $('#record-' + id).hide('fast', function () {
                            $(this).remove();
                        });
                    }
                },
                error: function () {
                    alert('Cannot delete category.');
                }
            });
        }
    </script>
}