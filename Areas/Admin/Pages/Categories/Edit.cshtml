@page "{id:int}"
@model MyBlog.Admin.Pages.Categories.EditModel
@{
    ViewData["Title"] = "Edit Category (" + Model.Name + ")";
    ViewData["PageTitle"] = "Categories";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="row mb-2">
            <div class="col-md-6">
                <a asp-page="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-angle-left"></i>
                    Back
                </a>
            </div>
            <div class="col-md-6 text-right"></div>
        </div>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Edit Category</h3>
            </div>
            <form method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="@Model.Name">Name</label>
                        <input asp-for="@Model.Name" type="text" class="form-control">
                    </div>
                </div>
                <div class="card-footer text-center">
                    <button class="btn btn-primary"><i class="far fa-save"></i> Save</button>
                </div>
            </form>
            
        </div>
    </div>
</div>

